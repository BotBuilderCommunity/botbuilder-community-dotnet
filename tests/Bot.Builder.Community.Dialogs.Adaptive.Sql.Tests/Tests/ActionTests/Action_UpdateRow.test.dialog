{
    "$schema": "../../../../schemas/app.schema",
    "$kind": "Microsoft.Test.Script",
    "enableTrace": true,
    "dialog": {
        "$kind": "Microsoft.AdaptiveDialog",
        "id": "planningTest",
        "triggers": [
            {
                "$kind": "Microsoft.OnUnknownIntent",
                "actions": [
                    {
                        "$kind": "Sql.InsertRow",
                        "providerName": "SQLite",
                        "connection": "Data Source=InMemorySample;Mode=Memory;Cache=Shared",
                        "table": "ActionTable",
                        "values": {
                            "TextValue": "titi",
                            "ExpressionValue": "toto"
                        } 
                    },
                    {
                        "$kind": "Microsoft.SetProperty",
                        "property": "user.name",
                        "value": "='frank'"
                    },
                    {
                        "$kind": "Sql.UpdateRow",
                        "providerName": "SQLite",
                        "connection": "Data Source=InMemorySample;Mode=Memory;Cache=Shared",
                        "table": "ActionTable",
                        "values": {
                            "ExpressionValue": "=user.name"
                        },
                        "keys" : {
                            "id": "1",
                        }
                    },
                    {
                        "$kind": "Microsoft.SetProperty",
                        "property": "turn.sqlResultUpdated",
                        "value": "=turn.lastresult"
                    },
                    {
                        "$kind": "Microsoft.TraceActivity",
                        "name": "test",
                        "valueType": "result",
                        "value": "=turn.sqlResultUpdated"
                    }  
                ]
            }
        ],
        "autoEndDialog": true,
        "defaultResultProperty": "dialog.result"
    },
    "script": [
        {
            "$kind": "Microsoft.Test.UserSays",
            "text": "hi"
        },
        {
            "$kind": "Microsoft.Test.AssertReplyActivity",
            "assertions": [
                "type == 'trace'",
                "valueType == 'result'",
                "value.updatedRows == 1"
            ]
        },
    ]
}